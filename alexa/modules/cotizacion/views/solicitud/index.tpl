<style type="text/css">    .dataTables_filter{            margin-left: 56%;    }.pagination{            margin-left: 60%;    }</style><form id="form1" class="panel panel-default">	<div class="panel-heading">	<div class="row" >		<div class="col-md-13">						<div class="col-md-12" >							<div class="pull-right" >						{if $_acl->permiso('crear_solicitud')}						<a class="btn btn-sm  btn-primary" href="{$_layoutParams.root}cotizacion/solicitud/nuevo"><i class="icon-plus"></i> Generar solicitud</a>				{/if}				</div>				</div>				</div>	</div>		</div>   <div class="panel-body">    <table class="table  table-hover table-border" align="" id="table-index">        <thead>             <tr>                <th>Requisición</th>                <th>Realizado por</th>                <th>Proveedor</th>                <th>Fecha limite</th>                {if ((Session::get(level)==1) )}                <th>Usuario</th>                <th>Estado</th>                {/if}                 <th colspan=""></th>            </tr>        </thead>         <tbody>         {foreach $datos as $dato}            <tr>                <td>{$dato.codigo}</td>                <td>{$dato.realizado_por}</td>                <td>{$dato.proveedor}</td>                <td>{$dato.fecha_limite}</td>                {if ((Session::get(level)==1) )}                <td>{$dato.usuario}</td>                <td>                    {if ($dato.estado==1)} Edición precios {/if}                    {if ($dato.estado==3)} Entrega {/if}                </td>                {/if}                 <td class="opcion" align="right">                    {if $_acl->permiso('modificar_solicitud')}                     {if ($dato.estado==1)}                        <a class="btn  btn-primary btn-sm" href="{$_layoutParams.root}cotizacion/solicitud/modificar/{$dato.id}">Modificar</a>                     {/if}                        {/if}                        {if $_acl->permiso('entregar_solicitud')}                      {if ($dato.estado==3)}                        <a class="btn  btn-success btn-sm" href="{$_layoutParams.root}cotizacion/solicitud/entrega/{$dato.id}"> -Entrega- </a>                      {/if}                      {/if}                      {if $_acl->permiso('recibir_solicitud')}                      {if ($dato.estado==4)}                        <a class="btn  btn-primary btn-sm" href="{$_layoutParams.root}cotizacion/solicitud/recibido/{$dato.id}">-Recibido</a>                      {/if}                      {/if}                      <a class="btn  btn-danger btn-sm" href="{$_layoutParams.root}libs/pdf/more.php?id={$dato.id}">PDF</a>				 </td>            </tr>        {/foreach}        </tbody>    </table>  </div>	  		</form>