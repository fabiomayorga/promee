<style type="text/css">    b{        margin-left: 20px;    }    tr{        margin-top: 20px;    }    h6, .h6 {    font-size: 10px;}.modi{    font-size: 14px !important;    padding: 2px !important; }</style><form id="form1" method="POST" enctype="multipart/form-data" action="{$_layoutParams.root}cotizacion/solicitud/editar/{$dato.id}" autocomplete="off" class="panel panel-default">    <input class="form-control"  type="hidden" name="id" value="{$id}" />    <input class="form-control"  type="hidden" name="guardar" value="1" />    <div class="panel-heading">        <div class="row" >                <div class="col-md-13">                                        <div class="col-md-12" align="right">                                   <button class="btn btn-primary btn-sm">Editar solicitud</button>                        <a class="btn btn-danger btn-sm" href="{$_layoutParams.root}cotizacion/solicitud/">Cancelar</a>                    </div>                  </div>                            </div>    </div>    <div class="panel-body">            <div class="row">            <!--div class="col-md-12">                <p class="">                    RECURSOS MATERIALES: Son todos los materiales, herramientas, equipos, componentes, que su gestión sea realizada por el proceso de Gestión de Recursos Materiales y Servicios                </p>            </div-->             <div class="col-md-12">                <div class="col-md-8">                    <table class="table table-bordered table-responsive">                        <tr>                            <td>                                <h6>FECHA DE PEDIDO:</h6>                            </td>                            <td>                                <h6>DIA</h6>                            </td>                            <td>                                <input type="" name="fpdia" value="{$dato.fpdia}" class="form-control modi" disabled>                            </td>                            <td>                                <h6>MES</h6>                            </td>                            <td>                                <input type="" name="fpmes" value="{$dato.fpmes}" class="form-control modi" disabled>                            </td>                            <td>                                <h6>AÑO</h6>                            </td>                            <td>                                <input type="" name="fpano" value="{$dato.fpano}" class="form-control modi" disabled>                            </td>                        </tr>                        <tr>                            <td>                                <h6>FECHA LIMITE DE ENTREGA:</h6>                            </td>                            <td>                                <h6>DIA</h6>                            </td>                            <td>                                <input type="" name="fedia" value="{$dato.fedia}" class="form-control modi" disabled>                            </td>                            <td>                                <h6>MES</h6>                            </td>                            <td>                                <input type="" name="femes" value="{$dato.femes}" class="form-control modi" disabled>                            </td>                            <td>                                <h6>AÑO</h6>                            </td>                            <td>                                <input type="" name="feano" value="{$dato.feano}" class="form-control modi" disabled>                            </td>                        </tr>                    </table>                </div>                <div class="col-md-2"></div>                <div class="col-md-2">                    <table  class="table table-bordered table-responsive">                        <tr align="center">                            <td>                                REQUISICIÓN No.                            </td>                        </tr>                        <tr align="center">                            <td>                                {$dato.codigo}                            </td>                        </tr>                    </table>                </div>            </div>            <div class="col-md-12">                <div class="col-md-7">                    <table class="table table-bordered table-responsive">                        <tr>                            <td>                                <h6>REALIZADA POR:</h6>                            </td>                            <td>                                <input type="" value="{$dato.realizado_por}" name="realizado" class="form-control modi" disabled>                            </td>                        </tr>                                         </table>                </div>                <div class="col-md-2"></div>                <div class="col-md-5">                    <table  class="table table-bordered table-responsive">                        <tr align="center">                            <td>                               <h6>CONTRATO O AREA:</h6>                            </td>                                                    <td>                               <input type="" value="{$dato.contrato_area}" name="area" class="form-control modi" disabled>                            </td>                        </tr>                    </table>                </div>            </div>             <div class="col-md-12">                <div class="col-md-4">                    <table class="table table-bordered table-responsive">                        <tr>                            <td>                                <h6>CENTRO DE COSTO:</h6>                            </td>                            <td>                                <input type="" value="{$dato.centro_costo}" name="centrocosto" class="form-control modi" disabled>                            </td>                        </tr>                                         </table>                </div>                              <div class="col-md-8">                    <table  class="table table-bordered table-responsive">                        <tr align="center">                            <td>                               <h6>PROVEEDOR:</h6>                            </td>                                                    <td>                               <input type="" value="{$dato.proveedor}" name="proveedor" class="form-control modi" disabled>                            </td>                        </tr>                    </table>                </div>            </div>                       <!-- tabla de productos -->             <div class="col-md-12">                <div class="col-md-12">                    <table  id="tabla" class="table table-bordered table-responsive">                      <thead>                         <tr align="center" style="background: #d9d8d8;">                            <td style="width: 40%"><h6>DESCRIPCION DE MATERIALES, HERRAMIENTAS, INSUMOS, EPP, EQUIPOS Y/O MAQUINARIA</td>                            <td style="width: 20%"><h6>UNIDAD COMERCIAL</h6></td>                            <td><h6>CANTIDAD PEDIDA</h6></td>                            <td><h6>CANTIDAD DESPACHADA</h6></td>                            <td><h6>VALOR UNITARIO</h6></td>                            <td style="width: 20%"><h6>VALOR TOTAL IVA INCLUIDO</h6></td>                        </tr>                       </thead>                     <tbody>                      {foreach $dato.productos as $producto}                        <tr>                            <td>                                <input type="hidden" value="{$producto.id}" name="producto[{$producto.id}][id]" class="form-control modi">                                <input type="" value="{$producto.descripcion}" name="producto[{$producto.id}][descripcion]" class="form-control modi" disabled="">                            </td>                            <td><input type="" value="{$producto.unidad_comercial}" name="producto[{$producto.id}][unidad_comercial]" class="form-control modi" required></td>                            <td><input type="" value="{$producto.cantidad_pedida}" name="producto[{$producto.id}][cantidad_pedida]" class="form-control modi" disabled></td>                            <td><input type="" value="{$producto.cantidad_despachada}" name="producto[{$producto.id}][cantidad_despachada]" class="form-control modi" required></td>                            <td><input type="" value="{$producto.valor_unitario}" name="producto[{$producto.id}][valor_unitario]" class="form-control modi" required></td>                            <td><input type="" value="{$producto.valor_iva}" name="producto[{$producto.id}][valor_iva]" class="form-control modi" required></td>                        </tr>                      {/foreach}                     </tbody>                     <tfoot>                         <tr style="background: #d9d8d8;">                            <td colspan="2">                                                            </td>                            <td colspan="3"><h6>VALOR TOTAL DE LA REQUISICION:</h6></td>                            <td><input type="" name="" class="form-control modi"></td>                        </tr>                                              </tfoot>                    </table>                </div>            </div>            <!-- observacion -->            <div class="col-md-12">                <div class="col-md-12">                    <h6> PARA SER UTILIZADO EN:</h6>                </div>                <div class="col-md-12">                    <textarea name="observacion" class="form-control" disabled>{$dato.observacion}</textarea>                </div>                            </div>        </div>    </div></form>