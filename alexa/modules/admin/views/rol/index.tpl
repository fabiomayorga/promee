<style type="text/css">    .dataTables_filter{            margin-left: 56%;    }.pagination{            margin-left: 60%;    }</style><form id="form1" class="panel panel-default"><div class="panel-heading">	<div class="row" >		<div class="col-md-13 pull-right">											<div class="col-md-12 pull-right" >						{if $_acl->permiso('crear_rol')}					<a class="btn  btn-primary" href="{$_layoutParams.root}admin/rol/nuevo"><i class="icon-plus"> </i> Crear rol</a>				{/if}			</div>									</div>	</div></div><div class="panel-body">    <table class="table table-bordered table-hover " align="center" id="table-index">        <thead>        <tr>            <th>Nombre</th>			<th ></th>        </tr>		</thead>		<tbody>        {foreach $datos as $dato}            <tr >                <td >                    {$dato.rol_nombre}                </td>                <td class="" align="right">                    <a class="btn btn-primary" href="{$_layoutParams.root}admin/rol/detalles/{$dato.rol_key}">Permisos</a>	                {if $_acl->permiso('modificar_rol')}					<a class="btn btn-primary" href="{$_layoutParams.root}admin/rol/editar/{$dato.rol_key}" title="Modificar el Nombre">Modificar</a>	                {/if}	                {if $_acl->permiso('eliminar_rol')}	                    {if (($dato.rol_key!=1) && ($dato.rol_key!=2) && ($dato.rol_key!=3))}	                     <a class="btn  btn-danger" href="{$_layoutParams.root}admin/rol/eliminar/{$dato.rol_key}">Eliminar</a>						{/if}					{/if}				</td>            </tr>        {/foreach}        </tbody>    </table></div>	</form><!-- modal para la modificacion --><div class="modal fade custom-width" id="modal-2" >	<div class="trans" style="">	<div class="modal-dialog" style="width: 60%;">		<div class="modal-content">						<div class="modal-header">				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>				<h3 ><b>Editar rol</b></h3>			</div>			<form id="modificar" method="POST" enctype="multipart/form-data" action="{$_layoutParams.root}admin/rol/editar/" autocomplete="off">			<div class="modal-body">			    	<input type="hidden" name="guardar" value="1" />					<input type="hidden" id="key" name="key" value="" />					<br>					<div align="">							<b>Nombre:</b>							<input class="form-control"type="text" name="nombre" id="nombreedit" value="{$datos.rol_nombre|default:""}" required="true" />					</div>					<br>			</div>						<div class="modal-footer">   			<button class="btn btn-blue"> Guardar Cambios</button>			  <a class="btn btn-primary" href="{$_layoutParams.root}admin/rol">Cancelar</a>			  </form>			</div>		</div>	</div>	</div></div><div class="modal fade custom-width" id="modal-3" style="">	<div class="trans" style="">	<div class="modal-dialog " style="width: 60%;">		<div class="modal-content" style="">						<div class="modal-header">				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>				<h4 ><b>Crear rol</b></h4>			</div>	<form id="formcrear" enctype="multipart/form-data" method="POST" action="{$_layoutParams.root}admin/rol/nuevo" autocomplete="off">			<div class="modal-body">				<input type="hidden" name="guardar" value="1" />					<br>						<div align="">								<b>Nombre:</b>								<input class="form-control"type="text" name="nombre"  value="" required="true" />						</div>			</div>			<div class="modal-footer">				<button class="btn btn-blue">Crear Rol</button>				<a class="btn btn-primary" href="{$_layoutParams.root}admin/rol">Cancelar</a>			  </form>			</div>		</div>	</div>	</div></div>