<style type="text/css">    b{        margin-left: 20px;    }    tr{        margin-top: 20px;    }</style><form id="form1" enctype="multipart/form-data" method="POST" action="{$_layoutParams.root}admin/usuario/editar/{$datos.usu_key}" autocomplete="off" class="panel panel-default">    <input class="form-control"  type="hidden" name="guardar" value="1" />	   <div class="panel-heading"><div class="row" >		<div class="col-md-13">						<div class="col-md-12" align="right">						     <button class="btn btn-primary"> Guardar </button>				<a class="btn btn-danger" href="{$_layoutParams.root}admin/usuario">Cancelar</a>			</div>			</div></div></div><div class="panel-body">    <table class="" cellpadding="10px" style="width: 100%;padding:50px;"  align="center">        <tr align="left">            <th class=""><b>Nombre:</b></th>            <td>                <input class="form-control"  type="texto" id="nombre" name="nombre" value="{$datos.usu_nombre|default:""}" required="true" />            </td>            <th class=""><b>Apellidos:</b></th>            <td>                <input class="form-control"  type="texto" id="apellidos" name="apellidos" value="{$datos.usu_apellidos|default:""}" />            </td>        </tr>        <tr align="left">                        <th class=""><b>E-mail: </b></th>            <td  colspan="3">                <input class="form-control"  id="email" type="email" name="email" value="{$datos.usu_email|default:""}" required="true"/>            </td>                         </tr>        <tr align="left">                       <th class=""><b>Numero de documento: </b></th>            <td>                <input class="form-control"  id="numDocumento" type="texto" name="numDocumento" value="{$datos.usu_num_documento|default:""}" required="true" />            </td>            <th class=""><b>Rol: </b></th>            <td>                <select  class="form-control"  id="rol" name='rol' required="true">                    {foreach $roles as $nombre}                        <option value="{$nombre.rol_key}" {if isset($datos.rol_key)}{if $datos.rol_key==$nombre.rol_key}selected{/if}{/if}>{$nombre.rol_nombre}</option>                    {/foreach}                </select>            </td>        </tr >        <tr align="left">                             <th class=""><b>Login:</b></th>            <td>                <input class="form-control"  id="login2" type="texto" name="login2" value="{$datos.usu_login|default:""}" readonly/>            </td>        </tr>        <tr align="left">            <th class=""><b>Observaciones:</b></th>                 </tr>		<tr>		 <td colspan="5">                <textarea class="form-control" id="observaciones" name="observaciones"  style="width:100%;height:70px;">{$datos.usu_observaciones|default:""}</textarea>            </td>		</tr>    </table>    </div>    <br/></form><br>