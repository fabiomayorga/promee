<form name="form1"><div class="row" >		<div class="col-md-13">			<div class="col-md-6" >				<font class="brand" style="font-size:22px;" ><b>Vista detallada</b></font>											</div>			<div class="col-md-6" align="right">							<a class="btn btn-primary" href="{$_layoutParams.root}admin/usuario">Regresar</a>				<a class="btn btn-primary" href="{$_layoutParams.root}admin/usuario/editar/{$datos.usu_key}">Modificar</a>				<a class="btn btn-danger" href="{$_layoutParams.root}admin/usuario/eliminar/{$datos.usu_key}">Eliminar</a>			</div>				</div>				</div>	<hr>    <table class="" style="width:100%;" align="center">      <tr>		<td colspan="4">		   <table cellpadding="5" style="width:100%;" > 				<tr>					<td >					<table cellpadding="5" style="width:100%;">						<tr>							<td><b>Nombre: </b></td>							<td>								<input class="form-control" style="width:;" type="texto" id="nombre" name="nombre" value="{$datos.usu_nombre|default:""}" required="true" disabled />							</td>						</tr>						<tr>							<td ><b>Apellidos: </b></td>							<td>								<input class="form-control"  type="texto" id="apellidos" name="apellidos" value="{$datos.usu_apellidos|default:""}" disabled/>							</td>						</tr>						<tr>							<td  ><b>Numero de documento: </b></td>							<td>								<input class="form-control"  id="numDocumento" type="texto" name="numDocumento" value="{$datos.usu_num_documento|default:""}" required="true" readonly disabled/>							</td>						</tr>					</table>				</td>				<td style=""></td>				<td colspan="" align="center">						{if $datos.usu_foto}						<img src="{$_layoutParams.root}public/adjuntos/usuarios/{$datos.usu_foto}" style="max-width: 250px; max-height: 250px" />						{else}						<img src="{$_layoutParams.root}public/adjuntos/usuarios/user.png" style="max-width: 250px; max-height: 250px" />						{/if}				</td>			  </tr>			</table>		<hr/>	</td>	</tr>		<tr>            <td ><b>Direcci&oacute;n: </b></td>            <td >                <input class="form-control"  id="direccion" type="texto" name="direccion" value="{$datos.usu_direccion|default:""}" required="true" disabled />            </td>        </tr>        <tr>            <td class=""><b>Tel&eacute;fono: </b></td>            <td>                <input class="form-control"  id="telefono" type="texto" name="telefono" value="{$datos.usu_telefono|default:""}" required="true" disabled />            </td>                    <td class=""><b>E-mail: </b></td>            <td>                <input class="form-control"  id="email" type="texto" name="email" value="{$datos.usu_email|default:""}" disabled />            </td>        </tr>        {if $_acl->permiso('asignar_rol')}            <tr>                <td class=""><b>Rol: </b></td>                <td>                    <select  class="form-control"  id="rol" name='rol' disabled >                        <option value="">Elija un Rol</option>                        {foreach $roles as $nombre}                            <option value="{$nombre.rol_key}" {if isset($datos.rol_key)}{if $datos.rol_key==$nombre.rol_key}selected{/if}{/if}>{$nombre.rol_nombre}</option>                        {/foreach}                    </select>                </td>            </tr>        {/if}                <tr>            <td class=""><b>Login: </b></td>            <td>                <input class="form-control"  id="login" type="texto" name="login" value="{$datos.usu_login|default:""}" readonly disabled />            </td>        </tr>        <tr>            <td class=""><b>Observaciones: </b></td>                    </tr>		 <tr>            <td colspan="5">                <textarea  class="form-control" id="observaciones" name="observaciones" style="width:100%;" disabled>{$datos.usu_observaciones|default:""}</textarea>            </td>        </tr>      	    <tr>    </table></form>