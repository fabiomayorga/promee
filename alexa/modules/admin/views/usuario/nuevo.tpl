<style type="text/css">    b{        margin-left: 20px;    }    tr{        margin-top: 20px;    }</style><form id="form1" method="POST" enctype="multipart/form-data" action="{$_layoutParams.root}admin/usuario/nuevo" autocomplete="off" class="panel panel-default"><input class="form-control"  type="hidden" name="guardar" value="1" />    <div class="panel-heading"><div class="row" >		<div class="col-md-13">						<div class="col-md-12" align="right">							<button class="btn btn-blue">Crear usuario</button>				<a class="btn btn-danger" href="{$_layoutParams.root}admin/usuario">Cancelar</a>			</div>				</div>				</div></div><div class="panel-body">    <table class="" style="width: 100%;" cellspacing="10" cellpadding="10" >        <tr align="left">            <th ><b class="">Nombre: </b></th>            <td>                <input class="form-control"  type="text" id="nombre" name="nombre" value="{$temporal.nombre|default:""}" required="true" />            </td>			<th class=""><b>Apellidos: </b></th>            <td>                <input class="form-control"  type="text" id="apellidos" name="apellidos" value="{$temporal.apellidos|default:""}" />            </td>        </tr>        <tr  align="left" >           <th class=""><b>E-mail: </b></th>            <td colspan="3">                <input class="form-control"  id="email" type="email" name="email" value="{$temporal.email|default:""}" required="true" />            </td>                   </tr>        <tr align="left">             <th class=""><b>Numero de documento: </b></th>            <td>                <input class="form-control"  id="numDocumento" type="text" name="numDocumento" value="{$temporal.numDocumento|default:""}" required="true" />            </td>            <th class=""><b>Rol:</b> </th>            <td>                <select  class="form-control"  id="rol" name='rol' required="true">                    <option value="">Elija un rol</option>                    {foreach $roles as $nombre}                        <option value="{$nombre.rol_key}" {if isset($temporal.rol)}{if $temporal.rol==$nombre.rol_key}selected{/if}{/if}>{$nombre.rol_nombre}</option>                    {/foreach}                </select>            </td>        </tr>        <tr align="left">                              <th class=""><b>Login: </b></th>            <td>                <input class="form-control"  id="login" type="texto" name="login" value="{$temporal.login|default:""}" required="true"/>            </td>        </tr>        <tr align="left">            <th class=""><b>Observaciones: </b></th>                   </tr>		  <tr align="left">            <td colspan="5">                <textarea class="form-control" id="observaciones" name="observaciones" style="width:100%;height:70px;">{$temporal.observaciones|default:""}</textarea>            </td>        </tr>    </table></div></form>